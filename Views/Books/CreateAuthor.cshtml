@model MyLibrary.Models.Author

@{
    ViewData["Title"] = "CreateAuthor";
}

<h1>Добавить автора</h1>

<h4>Автор</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateAuthor">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                @if (ViewBag.BookId != null)
                {                   
                   <input type="hidden" asp-for="BookId" value=@ViewBag.BookId />
                }
                else
                {
                    <label asp-for="BookId" class="control-label"></label>
                    @Html.DropDownListFor(model => model.BookId, ViewBag.Books as SelectList)
                }
                <span asp-validation-for="BookId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
